
fn main() -> elem {
  let name = "world";
  let input =
    <input
      type="text"
      oninput={ |value: str| { name = value } }
      value="wef">
    </input>;

  let colored_name = <span style = "color: red">{name}</ span>;

  <p class="foo">
    {input}
    Hello, {colored_name}.
  </p>
}

